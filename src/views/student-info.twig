<div class="container">
	<h3 class="subtitle">Información del estudiante</h3>

	<!-- age -->
	<div class="field is-horizontal">
		<div class="field-label is-normal">
			<label class="label">Edad (años)</label>
		</div>
		<div class="field-body ">
			<div class="field">
				<input class="input is-primary" type="number" name="age" min="18" max="99">
			</div>
		</div>
	</div>

	<!-- gender -->
	<div class="field is-horizontal">
		<div class="field-label is-normal">
			<label class="label">Género</label>
		</div>
		<div class="field-body">
			<div class="field">
				<div class="select is-primary is-fullwidth" name="gender">
					<select name="gender">
						<option disabled selected value>
							-- Selecciona --
						</option>
						{% for gender in genders %}
							<option value={{gender.id}}>{{gender.name}}</option>
						{% endfor %}
					</select>
				</div>
			</div>
		</div>

	</div>

	<!-- course -->
	<div class="field is-horizontal">
		<div class="field-label is-normal">
			<label class="label">Curso matriculado</label>
		</div>
		<div class="field-body">
			<div class="field">
				<p class="control">
					<input class="input is-primary" type="number" name="lowest-course" min="1" max="6" placeholder="Curso más bajo">
				</p>
			</div>
			<div class="field">
				<p class="control">
					<input class="input is-primary" type="number" name="highest-course" min="1" max="6" placeholder="Curso más alto">
				</p>
			</div>
		</div>
	</div>

	<!-- enrollment -->
	<div class="field is-horizontal">
		<div class="field-label is-normal">
			<label class="label">Matriculas realizadas</label>
		</div>
		<div class="field-body">
			<div class="field">
				<div class="select is-primary is-fullwidth" name="enrollment">
					<select name="enrollment">
						<option disabled selected value>
							-- Selecciona --
						</option>
						{% for idk in 1..enrollment %}
							<option value={{idk}}>{{idk}}</option>
						{% endfor %}
					</select>
				</div>
			</div>
		</div>
	</div>

	<!-- exam -->
	<div class="field is-horizontal">
		<div class="field-label is-normal">
			<label class="label">Convocatorias realizadas</label>
		</div>
		<div class="field-body">
			<div class="field">
				<div class="select is-primary is-fullwidth" name="exam">
					<select name="exam">
						<option disabled selected value>
							-- Selecciona --
						</option>
						{% for idk in 1..exam %}
							<option value={{idk}}>{{idk}}</option>
						{% endfor %}
					</select>
				</div>
			</div>
		</div>
	</div>

	<!-- interest -->
	<div class="field is-horizontal">
		<div class="field-label">
			<label class="label">La asignatura me interesa</label>
		</div>
		<div class="field-body">
			<div class="field is-narrow">
				<div class="control">
					{% for interes in interest %}
						<label class="radio">
							<input type="radio" name="interest" value="{{interes.id}}">
							{{interes.name}}
						</label>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>


	<!-- Mentoring -->
	<div class="field is-horizontal">
		<div class="field-label">
			<label class="label">Hago uso de las tutorías</label>
		</div>
		<div class="field-body">
			<div class="field is-narrow">
				<div class="control">
					{% for mentor in mentoring %}
						<label class="radio">
							<input type="radio" name="mentoring" value="{{mentor.id}}">
							{{mentor.name}}
						</label>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>

	<!-- dificulty -->
	<div class="field is-horizontal">
		<div class="field-label">
			<label class="label">Dificultad de esta asignatura</label>
		</div>
		<div class="field-body">
			<div class="field is-narrow">
				<div class="control">
					{% for dificult in dificulty %}
						<label class="radio">
							<input type="radio" name="dificulty" value="{{dificult.id}}">
							{{dificult.name}}
						</label>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>

	<!-- expected-grade -->
	<div class="field is-horizontal">
		<div class="field-label">
			<label class="label">Calificación esperada</label>
		</div>
		<div class="field-body">
			<div class="field is-narrow">
				<div class="control">
					{% for expected in expectedgrade %}
						<label class="radio">
							<input type="radio" name="expectedgrade" value="{{expected.id}}">
							{{expected.name}}
						</label>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>

	<!-- assistance -->
	<div class="field is-horizontal">
		<div class="field-label">
			<label class="label">Asistencia a clase (&#37; horas lectivas)</label>
		</div>
		<div class="field-body">
			<div class="field is-narrow">
				<div class="control">
					{% for assist in assistance %}
						<label class="radio">
							<input type="radio" name="assistance" value="{{assist.id}}">
							{{assist.name}}
						</label>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</div>
