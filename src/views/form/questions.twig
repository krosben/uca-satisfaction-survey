<div>
	<div class="columns">
		<div class="column is-6"></div>
		{% for column in 1..columns %}
			<div class="column {% if column in 2..columns %}is-hidden-mobile{% endif %}">
				<div class="field">
					<label class="label">Profesor
						{{ column-}}</label>
					<div class="control">
						<div class="select is-primary is-fullwidth">
							<select name="proffesors[{{column}}]">
								<option disabled {% if not attribute(valid.proffesors, column) %} selected {% endif %} value>
									-- Selecciona --
								</option>
								{% for proffesor in proffesors %}
									<option value={{proffesor.id}} {% if attribute(valid.proffesors, column) and attribute(valid.proffesors, column) == proffesor.id and attribute(valid.answers, column)|length %} selected {% endif %}>{{proffesor.name}}</option>
								{% endfor %}
							</select>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	{% for type,typeitems in questions %}
		<div class="columns">
			<h2 class="title">{{-type-}}</h2>
		</div>
		{% for subtype, subtypeitems in typeitems %}
			<div class="columns">
				<h3 class="subtitle" style="margin-top: 1.5rem">{{-subtype-}}</h3>
			</div>
			{% for question in subtypeitems %}

				<div class="columns" style="background-color: {% if loop.index is odd %} hsl(0, 0%, 95%) {% else %} #FFFFFF {% endif %};">
					<div class="column is-6">
						{{ question.description }}
					</div>
					{% for column in 1..columns %}
						<div class="column {% if column in 2..columns %}is-hidden-mobile{% endif %}">
							<div class="control">
								{%- for key, answer in answers -%}
									<label class="radio">
										<input type="radio" name="answers[{{column}}][{{question.id}}]" value="{{key}}" {% if attribute(attribute(valid.answers, column),question.id) and attribute(attribute(valid.answers, column),question.id) == key%} checked {% endif %}>
										{{answer}}
									</label>
								{%- endfor -%}
							</div>
						</div>
					{% endfor %}
				</div>
			{% endfor %}
		{% endfor %}
	{% endfor %}
</div>
